<template v-for="(option, index) in options">
  <div class="radio radio-icon">
    <input type="radio" :id="name + '-' + index  + '-' + $refs.getId" :name="name" v-model="value" :required="required" :value="option.id" v-on:change="updateValue()" >
    <label :for="name + '-' + index  + '-' + $refs.getId">
      <span class="check"><i class="fa fa-circle"></i></span> \{{ option.label || option.id }}
    </label>
  </div>
</template>
